{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "miguelmartinez11/bookaway-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name":"server",
            "image": "miguelmartinez11/bookaway-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image":"miguelmartinez11/bookaway-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }

    ]
}